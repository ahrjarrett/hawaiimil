nav.navbar.top-navbar.sm-hide
  .top-banner
    .container
      .message
        p.
          Available 24/7 To Better Serve Troops Overseas.
          Call #[a(href='tel:+1#{phone}')= prettify_phone]
          or #[a(href='quote') Get a Quote]
      //-a.close-message(href='#')

nav.navbar.middle-navbar
  .middle-banner
    .container
      .logo-wrapper
        img.logo(src='images/logo.svg')
      .contact-wrapper
        .phone
          a(href='tel:+1#{phone}')= prettify_phone
        .locations
          a(href='https://www.locationshawaii.com/') Locations Hawaii
        .email
          a(href='mailto:#{email}') Contact

nav.navbar.bottom-navbar
  .bottom-banner
    .container
      ul
        each route, title in nav
          li #[a(href='#{route}')= title]
      ul.social-ul
        each route, icon in social
          li #[a(href='#{route}')= icon]

